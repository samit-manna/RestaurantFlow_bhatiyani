{
  "name": "restaurant-flow-bhatiyani",
  "version": "1.0.0",
  "description": "RestaurantFlow_bhatiyani - Full-stack restaurant management platform with React frontend and Flask backend",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && python main.py",
    "build": "cd frontend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "deploy": "npm run deploy:backend && npm run deploy:frontend",
    "deploy:frontend": "cd frontend && vercel --prod",
    "deploy:backend": "cd backend && railway up",
    "test": "cd frontend && npm test",
    "lint": "cd frontend && npm run lint",
    "clean": "rm -rf frontend/build frontend/node_modules backend/__pycache__ backend/venv"
  },
  "keywords": [
    "restaurant",
    "management",
    "react",
    "flask",
    "typescript",
    "full-stack"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/RestaurantFlow_bhatiyani.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/RestaurantFlow_bhatiyani/issues"
  },
  "homepage": "https://github.com/yourusername/RestaurantFlow_bhatiyani#readme"
}
